<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NextClass" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ghost_white</item>
        <item name="colorPrimaryVariant">@color/ghost_white</item>
        <item name="colorOnPrimary">@color/black_chocolate</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_orange</item>
        <item name="colorSecondaryVariant">@color/icterine</item>
        <item name="colorOnSecondary">@color/ghost_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black_chocolate</item>
    </style>

    <style name="Theme.NextClass.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NextClass.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NextClass.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.NextClass.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.NextClass.AppWidgetContainer" parent="Theme.NextClass.AppWidgetContainerParent" >
        <item name="android:textColor">@color/black_chocolate</item>
    </style>
</resources>